<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightblack"
    tools:context=".Activities.CalculatorActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">
        <Button
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:textSize="@dimen/calcButtonTextSize"
            android:backgroundTint="@color/orange"
            android:id="@+id/backButton"
            android:text="Back"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text="2 + 3"
            android:layout_gravity="end"
            android:textSize="30sp"
            android:id="@+id/workingsTextView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text="5"
            android:layout_gravity="end"
            android:textSize="45sp"
            android:id="@+id/resultTextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:backgroundTint="@color/grey"
                android:textSize="@dimen/calcButtonTextSize"
                android:id="@+id/clearOnClick"
                android:textColor="@color/white"
                android:text="C"/>


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/orange"
                android:id="@+id/divisionOnClick"
                android:textColor="@color/white"
                android:text="/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/grey"
                android:textSize="@dimen/calcButtonTextSize"
                android:id="@+id/sevenOnClick"
                android:textColor="@color/white"
                android:text="7"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/grey"
                android:id="@+id/eightOnClick"
                android:textColor="@color/white"
                android:text="8"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/grey"
                android:id="@+id/nineOnClick"
                android:textColor="@color/white"
                android:text="9"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/orange"
                android:id="@+id/timesOnClick"
                android:textColor="@color/white"
                android:text="X"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/grey"
                android:id="@+id/fourOnClick"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="4"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/grey"
                android:id="@+id/fiveOnClick"
                android:textColor="@color/white"
                android:text="5"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/grey"
                android:id="@+id/sixOnClick"
                android:textColor="@color/white"
                android:text="6"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/orange"
                android:id="@+id/minusOnClick"
                android:textColor="@color/white"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/grey"
                android:textSize="@dimen/calcButtonTextSize"
                android:id="@+id/oneOnClick"
                android:textColor="@color/white"
                android:text="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/grey"
                android:id="@+id/twoOnClick"
                android:textColor="@color/white"
                android:text="2"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/grey"
                android:id="@+id/threeOnClick"
                android:textColor="@color/white"
                android:text="3"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/orange"
                android:id="@+id/plusOnClick"
                android:textColor="@color/white"
                android:text="+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/grey"
                android:textSize="@dimen/calcButtonTextSize"
                android:id="@+id/decimalOnClick"
                android:textColor="@color/white"
                android:text="."/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/grey"
                android:id="@+id/zeroOnClick"
                android:textColor="@color/white"
                android:text="0"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/calcButtonTextSize"
                android:backgroundTint="@color/orange"
                android:id="@+id/equalsOnClick"
                android:textColor="@color/white"
                android:text="="/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
